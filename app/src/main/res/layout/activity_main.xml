<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:padding="5dp"
        android:text="Remaining Qty : 200"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Blue_Main" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:text="Remaining Hot Qty : 400"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/Blue_Main" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivAddBottle"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="15dp"
                    android:tint="@color/Blue_Main"
                    app:srcCompat="@drawable/water_bottle" />

                <ImageView
                    android:id="@+id/ivAdd"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="15dp"
                    android:tint="@color/Blue_Main"
                    app:srcCompat="@drawable/ic_add_black_24dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivCalendar"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="25dp"
                    android:tint="@color/Blue_Main"
                    app:srcCompat="@drawable/calendar" />

                <ImageView
                    android:id="@+id/ivIncome"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="25dp"
                    android:tint="@color/Blue_Main"
                    app:srcCompat="@drawable/ic_income" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/ivAbout"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:tint="@color/Blue_Main"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_border"
                    android:padding="25dp"
                    app:srcCompat="@drawable/ic_information" />


                <ImageView
                    android:id="@+id/ivLogout"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"
                    android:layout_weight="1"
                    android:tint="@color/Blue_Main"
                    android:background="@drawable/rounded_border"
                    android:padding="25dp"
                    app:srcCompat="@drawable/ic_logout_black_24dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>